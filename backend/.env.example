# Application
APP_NAME=go-expense-management-system
PORT=8080
LOG_LEVEL=info

# Database PostgreSQL
DB_USERNAME=
DB_PASSWORD=
DB_HOST=localhost
DB_PORT=5432
DB_NAME=expense_management_system
DB_POOL_IDLE=10
DB_POOL_MAX=100
DB_POOL_LIFETIME=300

# JWT
JWT_SECRET=super_secret_key
JWT_ISSUER=go-aplication
JWT_AUDIENCE=go-users
JWT_EXPIRES_MINUTES=1440

# Cleanup
DROP_TABLE_NAMES=users,expenses,approvals,expense_status_histories

# Payment Processor
PAYMENT_BASE_URL=https://1620e98f-7759-431c-a2aa-f449d591150b.mock.pstmn.io
PAYMENT_TIMEOUT_SECONDS=10
PAYMENT_RETRY_COUNT=3
PAYMENT_RETRY_DELAY_SECONDS=2
PAYMENT_QUEUE_BUFFER=100

# CORS
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_CREDENTIALS=false

# Rate Limiter
RATE_LIMIT=100-M
RATE_LIMIT_EXCLUDE_PATHS=/health,/api/health,/api/metrics,/api/openapi.yaml,/swagger/*

# SMTP
SMTP_ENABLED=false
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=
SMTP_FROM_NAME=Expense Management
